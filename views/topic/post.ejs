
<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <title><%= title %></title>

  <%- include("../link.ejs") %>
</head>
<body>

<%- include("../header.ejs") %>

<div class="main layui-clear">
  <div class="wrap">
    <div class="content" style="margin-right:0">
      <div class="fly-tab">
        <span>
          <a href="total" <% if(title=="全部"){ %> class="tab-this" <% } %> >全部</a>
          <a href="unsolved" <% if(title=="未结帖"){ %> class="tab-this" <% } %> >未结帖</a>
          <a href="solved" <% if(title=="已采纳"){ %> class="tab-this" <% } %> >已采纳</a>
          <a href="excellent" <% if(title=="精帖"){ %> class="tab-this" <% } %> >精帖</a>
        </span>
        <form action="http://cn.bing.com/search" class="fly-search">
          <i class="iconfont icon-sousuo"></i>
          <input class="layui-input" autocomplete="off" placeholder="搜索内容，回车跳转" type="text" name="q">
        </form>
        <a href="add.html" class="layui-btn jie-add">发布问题</a>
      </div>

      <ul class="fly-list">
        <% posts.forEach(function(post){ %>
        <li class="fly-list-li">
          <a href="users/home?uid=<%= post.get('questionerId') %>" class="fly-list-avatar">
            <img src=<%= post.get('questionerAvatar') %> alt="">
          </a>
          <h2 class="fly-tip">
            <a href="topic/detail?qId=<%= post.get('objectId') %>"><%= post.get('title') %></a>
            <% if( post.get('isTop')==1 ){ %>
            <span class="fly-tip-stick">置顶</span>
            <% } if( post.get('recommend')==1 ){ %>
            <span class="fly-tip-jing">精帖</span>
            <% } %>
          </h2>
          <p>
            <span><a href="user/home.html"><%= post.get('questionerNickName') %></a></span>
            <script>
              var time = getDateDiff(<%= post.get('createdAt').getTime() %>);
              document.write("<span>" + time + "</span>");  // 输出语句
            </script>
            <span><%= post.get('topicClass') %></span>
            <span class="fly-list-hint">
              <i class="iconfont" title="回答">&#xe60c;</i> <%= post.get('consultations') %>
              <i class="iconfont" title="人气">&#xe60b;</i> <%= post.get('visits') %>
            </span>
          </p>
        </li>
        <% }) %>

      </ul>

      <!-- <div class="fly-none">并无相关数据</div> -->

      <div style="text-align: center">
        <div class="laypage-main"><span class="laypage-curr">1</span><a href="/jie/page/2/">2</a><a href="/jie/page/3/">3</a><a href="/jie/page/4/">4</a><a href="/jie/page/5/">5</a><span>…</span><a href="/jie/page/148/" class="laypage-last" title="尾页">尾页</a><a href="/jie/page/2/" class="laypage-next">下一页</a></div>
      </div>

    </div>
  </div>
</div>

<%- include("../footer.ejs") %>
<script src="../../res/layui/layui.js"></script>
<script>
layui.cache.page = 'jie';
layui.cache.user = {
  username: '游客'
  ,uid: -1
  ,avatar: '../../res/images/avatar/00.jpg'
  ,experience: 83
  ,sex: '男'
};
layui.config({
  version: "1.0.0"
  ,base: '../../res/mods/'
}).extend({
  fly: 'index'
}).use('fly');
</script>

</body>
</html>
